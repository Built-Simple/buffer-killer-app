{
  "name": "buffer-killer-app",
  "version": "1.0.0",
  "description": "A powerful, self-hosted social media scheduling application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "test": "node test-scripts/test-all-platforms.js",
    "test:twitter": "node test-scripts/test-twitter.js",
    "test:github": "node test-scripts/test-github.js",
    "test:quick": "node test-scripts/quick-post-test.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "precommit": "npm run test && npm run lint"
  },
  "keywords": [
    "social-media",
    "scheduler",
    "buffer",
    "electron",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^2.2.0",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csv-parse": "^6.1.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "googleapis": "^128.0.0",
    "json2csv": "^6.0.0-alpha.2",
    "node-fetch": "^2.7.0",
    "node-schedule": "^2.1.1",
    "oauth": "^0.10.2",
    "p-queue": "^6.6.2",
    "pkce-challenge": "^4.1.0",
    "puppeteer": "^21.11.0",
    "sharp": "^0.33.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.yourcompany.bufferkiller",
    "productName": "Buffer Killer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.code-workspace",
      "!.gitignore",
      "!README.md",
      "!dist",
      "!test-scripts"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
