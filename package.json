{
  "name": "buffer-killer-app",
  "version": "1.0.0",
  "description": "A powerful, self-hosted social media scheduling application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "test": "node test.js",
    "test:quick": "node test.js --quick",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "precommit": "npm run test && npm run lint"
  },
  "keywords": [
    "social-media",
    "scheduler",
    "buffer",
    "electron",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bottleneck": "^2.19.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "node-schedule": "^2.1.1",
    "p-queue": "^8.0.1",
    "puppeteer": "^21.11.0",
    "sharp": "^0.33.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  }
}
