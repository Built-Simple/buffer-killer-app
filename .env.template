# Buffer Killer App - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Node Environment
NODE_ENV=development

# Electron Settings
ELECTRON_IS_DEV=1

# Database
DATABASE_PATH=./db/posts.db

# Encryption Key (generate a strong random key)
ENCRYPTION_KEY=your-super-secret-encryption-key-change-this

# Twitter/X API
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=http://127.0.0.1:3000/auth/twitter/callback

# LinkedIn API
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_CALLBACK_URL=http://127.0.0.1:3000/auth/linkedin/callback

# Facebook/Instagram API
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://127.0.0.1:3000/auth/facebook/callback

# Mastodon (Instance-specific, these are examples)
MASTODON_DEFAULT_INSTANCE=mastodon.social
MASTODON_CALLBACK_URL=http://127.0.0.1:3000/auth/mastodon/callback

# GitHub API
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://127.0.0.1:3000/auth/github/callback

# OAuth Server Settings
OAUTH_PORT=3000
OAUTH_HOST=127.0.0.1

# Rate Limiting (Redis - optional for distributed systems)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Image Generation
PUPPETEER_EXECUTABLE_PATH=
CHROME_PATH=

# Analytics (optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=

# Sentry Error Tracking (optional)
SENTRY_ENABLED=false
SENTRY_DSN=

# Auto-Update Settings
AUTO_UPDATE_ENABLED=true
UPDATE_SERVER_URL=

# Feature Flags
ENABLE_AI_FEATURES=false
ENABLE_TEAM_FEATURES=false
ENABLE_PLUGINS=true
ENABLE_ANALYTICS=true

# AI Features (if enabled)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Link Shortening (optional)
BITLY_ACCESS_TOKEN=
SHORTLINK_SERVICE=bitly

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Development Settings
DEV_TOOLS_ENABLED=true
HOT_RELOAD_ENABLED=true

# Security
CSP_REPORT_URI=
SESSION_SECRET=your-session-secret-change-this

# Limits
MAX_ACCOUNTS_PER_PLATFORM=10
MAX_SCHEDULED_POSTS=1000
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100

# Paths
USER_DATA_PATH=./user-data
PLUGINS_PATH=./plugins
TEMPLATES_PATH=./templates
TEMP_PATH=./tmp