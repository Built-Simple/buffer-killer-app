# Buffer Killer - Environment Variables Template
# Copy this to .env and fill in your values

# ============================================
# OAUTH PLATFORMS (Optional - Browser auth works without these)
# ============================================

# Twitter/X OAuth (Optional - browser auth available)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# LinkedIn OAuth (Optional - browser auth available)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# YouTube/Google OAuth
YOUTUBE_CLIENT_ID=your_google_client_id
YOUTUBE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (Optional - browser auth available)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ============================================
# WEBHOOK PLATFORMS
# ============================================

# Website Webhook Configuration
WEBSITE_WEBHOOK_URL=https://your-website.com/api/social-posts
WEBSITE_API_KEY=your_website_api_key

# Skool Community Configuration
SKOOL_API_KEY=your_skool_api_key
SKOOL_COMMUNITY_URL=https://www.skool.com/your-community
SKOOL_WEBHOOK_URL=https://your-webhook.com/skool

# ============================================
# OPTIONAL FEATURES
# ============================================

# Analytics
ANALYTICS_KEY=optional_analytics_key

# Error Tracking
SENTRY_DSN=optional_sentry_dsn

# ============================================
# DEVELOPMENT
# ============================================

NODE_ENV=development
DEBUG=true
PORT=3000

# ============================================
# NOTES
# ============================================
# 1. Mastodon doesn't need API keys (uses OAuth per instance)
# 2. Twitter, GitHub, LinkedIn work with browser auth (no keys needed)
# 3. Website webhook is for posting to your own site
# 4. Skool may require manual setup until official API is available
# 5. YouTube requires 500+ subscribers for Community posts
